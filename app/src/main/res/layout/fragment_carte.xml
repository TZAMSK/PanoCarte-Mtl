<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.mapbox.maps.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment_carte" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentConteneur"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        map:defaultNavHost="true"
        map:navGraph="@navigation/nav_graph" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|end"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btnPositionActuelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma position"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:backgroundTint="@color/bleuBouton"/>

        <Button
            android:id="@+id/btnFavoris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes favoris"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/bleuBouton"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/popupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="#AAFFFFFF"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="32dp"
            android:orientation="vertical"
            android:layout_margin="32dp"
            android:background="@drawable/popup_bg"
            android:elevation="4dp"
            android:minHeight="400dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgParking"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/station"
                    android:contentDescription="Image"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="1dp">

                    <TextView
                        android:id="@+id/Adresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresse"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtAdresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/bookmarkLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bookmark"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/popupBouton"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="Fermer"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/bleuBouton" />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/navigation_menu" />

</FrameLayout>
